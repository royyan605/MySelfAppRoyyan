<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/profile1">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_baseline_close_24" />


            <TextView
                android:id="@+id/tvContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contacts"
                android:textAlignment="center"
                android:textColor="@color/text_or_icon"
                android:textSize="32sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_gmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tvContacts"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:drawableLeft="@drawable/logo_gmail"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="10dp"
                android:text="royyandesign@gmail.com"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/btn_gmail"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:drawableLeft="@drawable/logo_phone"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="10dp"
                android:text="085156561605"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_github"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/btn_phone"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:drawableLeft="@drawable/logo_github"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="10dp"
                android:text="royyan605"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/btn_github"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="085156561605"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/logo_whatsapp"
                android:paddingStart="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_telegram"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/btn_whatsapp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="25dp"
                android:text="Royyan22"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/logo_telegram"
                android:paddingStart="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>